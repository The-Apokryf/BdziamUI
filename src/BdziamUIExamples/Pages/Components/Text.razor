@page "/Text"

@attribute [NavigationItem("/Text", "Components/Text", @"svg(
<svg xmlns=""http://www.w3.org/2000/svg"" viewBox=""0 0 24 24"" width=""24"" height=""24"" fill=""currentColor"">
  <!-- Border of the text field -->
  <rect x=""2"" y=""6"" width=""20"" height=""12"" rx=""2"" fill=""none"" stroke=""currentColor"" stroke-width=""2"" />
  
  <!-- Text lines inside the field -->
  <line x1=""4"" y1=""10"" x2=""20"" y2=""10"" stroke=""currentColor"" stroke-width=""1.5"" stroke-linecap=""round"" />
  <line x1=""4"" y1=""14"" x2=""14"" y2=""14"" stroke=""currentColor"" stroke-width=""1.5"" stroke-linecap=""round"" />
</svg>
)")]
<BStack Orientation="Orientation.Vertical">
  @foreach (var textVariant in Enum.GetValues<Typo>())
  {
    <BText Typo="textVariant">@textVariant.ToString()</BText>
  }
</BStack>
