<BSwitch
    Value="@IsOn"
    ValueChanged="OnSwitchToggle"/>
@if (IsOn)
{
    <BText Typo="Typo.BodyMedium" Color="MaterialColor.SuccessContainer"> Is On </BText>
}


@code {
    private bool IsOn { get; set; }

    private void OnSwitchToggle(bool value)
    {
        IsOn = value;
        StateHasChanged();
    }

}