<BSwitch
    Value="@IsOn"
    Icon="MdiIcon.Wifi"
    ValueChanged="OnSwitchToggle"/>

@if (IsOn)
{
    <BText Typo="Typo.BodyMedium" Color="MaterialColor.SuccessContainer"> WiFi is Enabled </BText>
}


@code {
    private bool IsOn { get; set; }

    private void OnSwitchToggle(bool value)
    {
        IsOn = value;
        StateHasChanged();
    }

}