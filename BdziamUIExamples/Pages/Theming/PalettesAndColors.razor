@page "/PalettesAndColors"
@using System.Text
@using Bdziam.UI.Theming
@using Bdziam.UI.Theming.Model
@using Bdziam.UI.Utilities
@using Microsoft.AspNetCore.Components.Rendering
@inject ThemeService themeService
@attribute [NavigationItem("/PalettesAndColors", "Theming/Palettes and Colors", @"svg(
<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' width='24' height='24' fill='currentColor'>
  <!-- Outer Circle (Palette) -->
  <circle cx='12' cy='12' r='9' fill='currentColor' opacity='0.2'></circle>
  <!-- Color Spots -->
  <circle cx='8' cy='10' r='1.5' fill='currentColor'></circle>
  <circle cx='12' cy='7' r='1.5' fill='currentColor'></circle>
  <circle cx='16' cy='10' r='1.5' fill='currentColor'></circle>
  <circle cx='10' cy='15' r='1.5' fill='currentColor'></circle>
  <circle cx='14' cy='15' r='1.5' fill='currentColor'></circle>
</svg>)", 2)]
<BMasonryGrid Columns="6" Gap="Size.Small">
    @foreach (var color in Enum.GetValues<MaterialColor>())
    {
        <BContainer Padding="Size.Medium" SurfaceMaterialColor="@color">
            <BText Color="@color">@color.ToString()</BText>
        </BContainer>
    }
</BMasonryGrid>


@code{
    
    protected override void OnInitialized()
    {
        themeService.OnThemeChanged += StateHasChanged;
    }

}
