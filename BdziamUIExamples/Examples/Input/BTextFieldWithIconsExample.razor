<BTextField 
    Label="Search"
    Placeholder="Type to search..."
    LeadingIcon="GoogleMaterialFilledIcon.Search"
    TrailingIcon="GoogleMaterialFilledIcon.Clear"
    Value="@SearchQuery"
    ValueChanged="HandleSearchChange" />

@code {
    private string SearchQuery { get; set; } = string.Empty;

    private void HandleSearchChange(string? newValue)
    {
        SearchQuery = newValue ?? string.Empty;
    }
}