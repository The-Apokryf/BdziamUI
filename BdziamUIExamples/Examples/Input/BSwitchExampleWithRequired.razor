<BSwitch 
    Label="Kill all children"
    Value="@IsOn"
    Icon="MdiIcon.AccountChild"
    ValueChanged="OnSwitchToggle"
    Required="true"
    RequiredError="You need to kill all children. "
/>

@if (IsOn)
{
<BText Typo="Typo.Body" Color="MaterialColor.SuccessContainer"> Great Job! You Monster! </BText>
}

@code {
    private bool IsOn { get; set; } = false;

    private void OnSwitchToggle(bool value)
    {
        IsOn = value;
    }
}