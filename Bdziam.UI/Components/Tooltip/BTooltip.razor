@using Bdziam.UI.Model.Enums
@using Bdziam.UI.Utilities
@namespace Bdziam.UI
@inherits Bdziam.UI.Components.CommonBase.BComponentBase
<div id="@TooltipTargetId" class="@TargetClasses" @onmouseover="ShowTooltip" @onmouseout="HideTooltip">
    @ChildContent
</div>

<BPopover TargetElementId="@TooltipTargetId" IsOpen="@IsTooltipVisible" Position="@Position" MarginSize="Size.Small" ColorVariant="Color">
    <div style="@TooltipStyles">
        @TooltipText
    </div>
</BPopover>