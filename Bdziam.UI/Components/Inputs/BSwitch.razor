@namespace Bdziam.UI
@using Bdziam.UI.Model.Enums
@using Bdziam.UI.Utilities
@inherits Bdziam.UI.Components.CommonBase.BInputBase<bool>

<div @onclick="ToggleSwitch" style="position: relative; display: inline-flex; align-items: center; gap: 0.5rem; cursor: pointer;" class="@Class" id="@Id">
    <!-- Track -->
    <div style="@TrackStyles">
        <!-- Thumb -->
        <div style="@ThumbStyles">
            @if (Value && Icon != null)
            {
                <BIcon Icon="Icon" Size="Size.Small" Color="MaterialColor.Primary"/>
            }
        </div>
    </div>
    <!-- Label -->
    @if (!string.IsNullOrWhiteSpace(Label))
    {
        <BText Typo="Typo.BodyMedium" Color="MaterialColor.OnSurface">@Label</BText>
    }
    <!-- Required Error -->
    @if (Required && Value == false)
    {
        <BText Typo="Typo.LabelSmall" Color="MaterialColor.OnErrorContainer">@RequiredError</BText>
    }
</div>