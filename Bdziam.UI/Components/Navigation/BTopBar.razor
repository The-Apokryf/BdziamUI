@namespace Bdziam.UI
<div class="flex items-center justify-between bg-surface color-primary-text transition-all ease-in-out transition-colors" style="@ContainerStyles">
    <div class="flex items-center space-x-4">
        @LeftContent
    </div>
    <div class="flex items-center justify-center  space-x-4">
        @MiddleContent
    </div>
    <div class="flex items-center  space-x-4">
        @RightContent
    </div>
</div>
@if (ShowBackgroundRoundMask)
{
    <div style="@TopBarMaskStyles" class="transition-all ease-in-out transition-colors">
        <div style="width: 100%; height: 100%; border-top-left-radius: 16px;border-top-right-radius: 16px; background-color: var(--color-background);"></div>
    </div>
}
